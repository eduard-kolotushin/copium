<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="create-tables-init" author="EVKolotushin">
        <createTable tableName="users">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="firstname" type="varchar(1000)"/>
            <column name="lastname" type="varchar(1000)"/>
            <column name="middlename" type="varchar(1000)"/>
            <column name="email" type="varchar(1000)">
                <constraints unique="true"/>
            </column>
            <column name="degree" type="varchar(1000)"/>
            <column name="position" type="varchar(1000)"/>
            <column name="password_hash" type="varchar(1000)"/>
        </createTable>
        <createTable tableName="publications">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="title" type="varchar(1000)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="authors" type="clob">
                <constraints nullable="false"/>
            </column>
            <column name="journal" type="clob"/>
            <column name="volume" type="int"/>
            <column name="page" type="int"/>
            <column name="doi" type="varchar(1000)">
                <constraints unique="true"/>
            </column>
            <column name="abstract" type="clob"/>
            <column name="date" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="created" type="datetime" defaultValueDate="current_timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="publication_type" type="varchar(128)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="articles">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="title" type="varchar(1000)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="authors" type="varchar(128) []">
                <constraints nullable="false"/>
            </column>
            <column name="volume" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="page" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="journal" type="clob">
                <constraints nullable="false"/>
            </column>
            <column name="doi" type="varchar(1000)">
                <constraints unique="true"/>
            </column>
            <column name="date" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="created" type="datetime" defaultValueDate="current_timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="isbn" type="clob"/>
            <column name="financial_support" type="clob"/>
            <column name="publisher" type="clob"/>
            <column name="user_id" type="int">
                <constraints nullable="false" foreignKeyName="fk_article_user" referencedTableName="users" referencedColumnNames="id"/>
            </column>
        </createTable>
        <createTable tableName="theses">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="title_book_of_abstracts" type="varchar(1000)">
                <constraints nullable="false"/>
            </column>
            <column name="title" type="varchar(1000)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="authors" type="varchar(128) []">
                <constraints nullable="false"/>
            </column>
            <column name="page" type="int"/>
            <column name="doi" type="varchar(1000)">
                <constraints unique="true"/>
            </column>
            <column name="url" type="varchar(1000)">
                <constraints nullable="false"/>
            </column>
            <column name="date" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="created" type="datetime" defaultValueDate="current_timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="financial_support" type="clob"/>
            <column name="publisher" type="clob"/>
            <column name="user_id" type="int">
                <constraints nullable="false" foreignKeyName="fk_thesis_user" referencedTableName="users" referencedColumnNames="id"/>
            </column>
        </createTable>
        <createTable tableName="monographs">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="title" type="varchar(1000)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="authors" type="varchar(128) []">
                <constraints nullable="false"/>
            </column>
            <column name="page" type="int"/>
            <column name="doi" type="varchar(1000)">
                <constraints unique="true"/>
            </column>
            <column name="url" type="varchar(1000)">
                <constraints nullable="false"/>
            </column>
            <column name="date" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="created" type="datetime" defaultValueDate="current_timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="financial_support" type="clob"/>
            <column name="publisher" type="clob"/>
            <column name="user_id" type="int">
                <constraints nullable="false" foreignKeyName="fk_monograph_user" referencedTableName="users" referencedColumnNames="id"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>